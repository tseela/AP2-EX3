<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#ffbecf"
        android:hint="IP:"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        app:layout_constraintTop_toBottomOf="@id/ip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Port:"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:background="#ffbecf"
        android:layout_margin="10dp"
        android:inputType="text"
        android:id="@+id/port" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/port"
        android:id="@+id/connect"
        />

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:translationX="-140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect"
        android:layout_margin="10dp"
        android:rotation="270"
        android:progress="50"
        android:id="@+id/throttle" />

    <tseela.school.ap2_ex3.Joystick
        android:id="@+id/joystick"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="290dp"
        custom:innerCircleColor="@color/purple_700"
        custom:outCircleColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/connect"
        app:layout_constraintLeft_toLeftOf="@id/throttle"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joystick"
        android:layout_margin="10dp"
        android:progress="50"
        android:id="@+id/rudder" />

</androidx.constraintlayout.widget.ConstraintLayout>